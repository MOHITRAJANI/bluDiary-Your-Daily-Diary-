<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.personal.diary">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/bludiary_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/bludiary_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".FunctionActivity" />
        <activity android:name=".AddActivity" />
        <activity android:name=".OkActivity" />
        <activity android:name=".ListActivity" />
        <activity android:name=".ListOpenActivity" />
        <activity android:name=".SearchActivity" />
        <activity android:name=".SearchFoundActivity" />
        <activity android:name=".DeleteActivity" />
        <activity android:name=".OkForDelete"></activity>
    </application>

</manifest>